<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".main.MainActivity"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                android:importantForAccessibility="no"
                android:src="@drawable/baseline_today_24" />

            <TextView
                style="@style/txDefault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/DailyTracker"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="128dp"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvYearProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvYearProgressTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/yearProgress"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvYearProgressDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingBottom="8dp"
                            android:text=""
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBirthdayTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/birthday"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvBirthdayDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:paddingBottom="8dp"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="@string/birthday"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAnniversaries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAnniversariesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/anniversaries"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvAnniversariesDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingBottom="8dp"
                            android:text="@string/anniversaries"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>





                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHoroscopeBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvHoroscopeBirthdayTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/horoscope"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvHoroscopeBirthdayDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:paddingBottom="8dp"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="@string/horoscope"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHoroscope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvHoroscopeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/horoscope"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvHoroscopeDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingBottom="8dp"
                            android:text="@string/horoscope"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFestivals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFestivalsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/festivalsAroundTheWorld"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvFestivalsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:paddingBottom="8dp"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="@string/festivalsAroundTheWorld"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMoonPhases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMoonPhasesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/moonPhase"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvMoonPhasesDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:paddingBottom="8dp"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="@string/moonPhase"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvQuotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvQuoteTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/quotes"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvQuoteDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:paddingBottom="8dp"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:text="@string/quotes"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/lyAdsBanner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" />

    </RelativeLayout>




        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="?attr/background"
            app:itemRippleColor="?attr/colorPrimary"
            app:itemTextColor="?attr/colorPrimary"
            app:menu="@menu/activity_main_drawer"
            app:subheaderColor="?attr/colorPrimary" />

</androidx.drawerlayout.widget.DrawerLayout>